{
  "name": "vs-thanos-snap",
  "displayName": "Thanos Snap",
  "description": "Randomly delete 50% of expendable code with a cinematic Thanos snap effect",
  "version": "0.0.1",
  "publisher": "MdShahAmanPatwary",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/TAIJULAMAN/thanos-snap-vs-code-extention"
  },
  "engines": {
    "vscode": "^1.108.1"
  },
  "categories": [
    "Other",
    "Formatters"
  ],
  "keywords": [
    "thanos",
    "snap",
    "code cleanup",
    "comments",
    "console.log"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vs-thanos-snap.snap",
        "title": "Thanos Snap: Balance the Code"
      }
    ],
    "configuration": {
      "title": "Thanos Snap",
      "properties": {
        "thanosSnap.confirmBeforeSnap": {
          "type": "boolean",
          "default": true,
          "description": "Show confirmation dialog before snapping"
        },
        "thanosSnap.targetPatterns": {
          "type": "object",
          "default": {
            "comments": true,
            "consoleLogs": true,
            "emptyLines": true
          },
          "description": "Types of code to target for deletion",
          "properties": {
            "comments": {
              "type": "boolean",
              "description": "Target comment lines"
            },
            "consoleLogs": {
              "type": "boolean",
              "description": "Target console.log and similar statements"
            },
            "emptyLines": {
              "type": "boolean",
              "description": "Target empty lines"
            }
          }
        },
        "thanosSnap.animationDuration": {
          "type": "number",
          "default": 1500,
          "minimum": 0,
          "maximum": 5000,
          "description": "Duration of dust effect animation in milliseconds"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.108.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.52.0",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}